<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ristic.getaroom.ResultActivity"
    android:id="@+id/resultContent">


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topResultGuideLine"
        app:layout_constraintGuide_percent="0.06"
        android:orientation="horizontal"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottomResultGuideLine"
        app:layout_constraintGuide_percent="0.94"
        android:orientation="horizontal"/>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/headerResultHolder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/topResultGuideLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/LightBlue">

        <ImageView
            android:id="@+id/accountBtnResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_account_circle_black_24dp"
            app:layout_constraintDimensionRatio="w,48:48" />

        <ImageView
            android:id="@+id/mapBtnResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toLeftOf="@+id/accountBtnResult"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/filterBtnResult"
            android:src="@drawable/ic_map_black_24dp"
            app:layout_constraintDimensionRatio="w,48:48" />


        <ImageView
            android:id="@+id/filterBtnResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_filter_list_black_24dp"
            app:layout_constraintDimensionRatio="w,48:48" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/footerResultHolder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/bottomResultGuideLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/LightBlue">


        <ImageView
            android:id="@+id/rankingBtnResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_format_list_numbered_black_24dp"
            app:layout_constraintDimensionRatio="w,48:48" />

        <ImageView
            android:id="@+id/sortBtnResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_sort_black_24dp"
            app:layout_constraintDimensionRatio="w,48:48" />

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/mapListFragmetnHolder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomResultGuideLine"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topResultGuideLine"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>


